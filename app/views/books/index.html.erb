
<h2>Books</h2>
<% @books.each do |book| %>
    <%= book.title %>
    <%= book.body %>
    <%= link_to 'Show', book_path(book) %>
    <%= link_to 'Edit', edit_book_path(book) %>
    <%= link_to 'Destroy', book_path(book), method: :delete, "data-confirm" => "Are you sure?" %>
<% end %>


<h2>New book</h2>
<%= form_for(@book) do |f| %>
    <h3>Title</h3>
    <%= f.text_field :title %>
    <h3>Body</h3>
    <%= f.text_area :body %>
    <%= f.submit %>
<% end %>


